<html>
    <head>
        <title>Mevick Systems</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@800&display=swap" rel="stylesheet">
<link rel="stylesheet" href="css/global.css">
    </head>
<header>
    <h2>Mevick Systems_</h2>
    <span>

    </span>
</header>
    <body>
        <img class="background" src="/background.jpg" alt="">
        <div class="loader">
            <h1 id="loaderHero"></h1>
            <h1 class="blinker">_ </h1>
        </div>

        <style>

            .loader {
                position: relative;
                top: -60vh;
                color: white;
                display: flex;
                justify-content: center;
                align-items: center;
                font-family: 'JetBrains Mono';
                font-size: 3em;
            }

            .blinker {
                animation-name: blink;
                animation-duration: 0.2s;
                animation-iteration-count: infinite;
            }

            @keyframes blink {
                from {
                    opacity: 0;
                }
                to {
                    opacity: 1;
                }
            }

            @keyframes spin {
                from {
                    transform: rotate(0deg);
                }
                to {
                    transform: rotate(360deg);
                }
            }
        </style>

        <script>
            const loader = document.getElementById("loaderHero");

            let count = 0;
            let currentText = [];
            let allText = "Mevick Systems".split("");

            function typeText() {
                setInterval(() => {
              if (currentText.length !== allText.length) {
                currentText.push(allText[count]);
                count++;
                loader.innerHTML = currentText.join("");
              } else {
                  setTimeout(() => location.href = "/login", 2000);
                  return;
              }
            }, 200);
            }

            window.addEventListener("DOMContentLoaded", typeText);
        </script>
    </body>
</html>